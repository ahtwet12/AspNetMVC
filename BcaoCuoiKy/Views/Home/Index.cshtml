@model IEnumerable<BcaoCuoiKy.Models.SanPham>
@using BcaoCuoiKy.Models
@using System.Linq


@{
    ViewBag.Title = "Home Page";
}


<!-- Product Start -->

<div class="row g-0 gx-5 align-items-end">
    <div class="col-lg-6">
        <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h1 class="display-5 mb-3">Our Products</h1>
            <p>Tempor ut dolore lorem kasd vero ipsum sit eirmod sit. Ipsum diam justo sed rebum vero dolor duo.</p>
        </div>
    </div>
    <div class="col-lg-6 text-start text-lg-end wow slideInRight" data-wow-delay="0.1s">
        <ul class="nav nav-pills d-inline-flex justify-content-end mb-5">
            @using (Html.BeginForm())
            {
                <p></p>
                <div class="form-group form-inline" style="display: flex; height: 35px;">
                    @Html.TextBox("SearchString", "", new { @class = "form-control" })
                    <input type="submit" class="btn btn-default" value="Search" style="background-color: orangered; border-radius:30px;  margin: 0 10px;color: white;height: 35px;" />
                </div>
            }
            </li>
        </ul>
    </div>
</div>

<div class="tab-content">

    <div id="tab-1" class="tab-pane fade show p-0 active">

        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">

                    <div class="product-item">
                        <div class="position-relative bg-light overflow-hidden">
                            @Html.Images("../" + item.HinhSP, "alt", "300")
                            <div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">New</div>
                        </div>
                        <div class="text-center p-4">
                            <a class="d-block h5 mb-2" href=""> @Html.DisplayFor(modelItem => item.TenSP)</a>
                            <span class="text-primary me-1">$ @Html.DisplayFor(modelItem => item.Dongia)</span>
                        </div>
                        <div class="d-flex border-top">
                            <small class="w-50 text-center border-end py-2">
                                <a class="text-body" href="@Url.Action("Details", "Sanphams", new { id = item.MaSP })"><i class="fa fa-eye text-primary me-2"></i>View detail</a>
                            </small>
                            <small class="w-50 text-center py-2">
                                <a class="text-body" href="@Url.Action("AddToCart","GioHang", new {MaSP = item.MaSP})"><i class="fa fa-shopping-bag text-primary me-2"></i>Add to cart</a>
                            </small>
                        </div>
                    </div>


                </div>
            }

        </div>

    </div>


</div>

<!-- Product End -->
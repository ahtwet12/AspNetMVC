@model BcaoCuoiKy.Models.SanPham
@using BcaoCuoiKy.Models;
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết sản phẩm</h2>

<div>
    <h4>SanPham</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
            Đơn vị tính
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Donvitinh)
        </dd>

        <dt>
            Đơn giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dongia)
        </dd>

        <dt>
            Loại sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiSP.TenLoaiSP)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            @* @Html.DisplayFor(model => model.HinhSP)*@
            @Html.Images("../../" + @Model.HinhSP, @Model.HinhSP, "100")
        </dd>
        <dt>

        </dt>

        <dd>
            <br />
            <a class="btn btn-success btn-sm" href="@Url.Action("AddToCart","GioHang", new {MaSP = Model.MaSP})">
                <span class="glyphicon glyphicon-shopping-cart"></span>Thêm vào giỏ
            </a>
            <a class="btn btn-success btn-sm" href="@Url.Action("Index","Home", new {MaSP = Model.MaSP})">Quay lại</a>
        </dd>



    </dl>
</div>

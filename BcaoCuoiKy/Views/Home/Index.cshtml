@model IEnumerable<BcaoCuoiKy.Models.SanPham>
@using BcaoCuoiKy.Models
@using System.Linq


@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm())
{
    <p></p>
    <div class="form-group form-inline" style="display: flex;">
        Tìm sản phẩm: @Html.TextBox("SearchString", "", new { @class = "form-control"})
        <input type="submit" class="btn btn-default" value="Search" style="background-color: deeppink;  margin: 0 10px;color: white;" />
    </div>
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-3" style="background-color: lavender; margin-top: 5px; text-align: center;">
            <h3> @Html.DisplayFor(modelItem => item.TenSP)</h3>
            @Html.Images("../" + item.HinhSP, "alt", "100") <br />
            @Html.DisplayFor(modelItem => item.Dongia)<br />
            <a class="btn btn-info btn-sm" href="@Url.Action("Details", "Sanphams", new { id = item.MaSP })">Xem chi tiết</a>

        </div>

    }

</div>
